{
    "name": "taller/drupal-enterprise-boilerplate",
    "description": "Boilerplate for creating projects with Drupal.",
    "require": {
        "drupal/core": "8.*"
    },
    "require-dev": {
        "drush/drush": "^9.0",
        "drupal/console": "1.*"
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        }
    }
}
